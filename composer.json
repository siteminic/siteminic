{
    "name": "siteminic/siteminic",
    "description": "Siteminic PHP CMS core",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Guinea",
            "email": "marcguinea+siteminic@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "thunderer/shortcode": "^0.7",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Siteminic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Siteminic\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
